<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="SocialStuff.Views.ReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Report message"
    >

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <TextBlock Text="Select a reason for reporting:" Margin="0,0,0,10"/>
        <ComboBox x:ConnectionId='2' x:Name="CategoryComboBox"                                                      Width="200">
            <ComboBoxItem Content="Stinky"/>
            <ComboBoxItem Content="Bad Language"/>
            <ComboBoxItem Content="Ugly Emoji"/>
            <ComboBoxItem Content="Scamming"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>
        <TextBox x:ConnectionId='3' x:Name="OtherReasonTextBox" Visibility="Collapsed" Width="200" Margin="0,10,0,0" PlaceholderText="Enter reason"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:ConnectionId='4' x:Name="SubmitButton" Content="Submit"                            Margin="0,0,10,0"/>
            <Button x:ConnectionId='5' x:Name="CancelButton" Content="Cancel"                           />
        </StackPanel>
    </StackPanel>
</Window>

